<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A0DBDB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_layer"
            android:layout_marginBottom="-15dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:backgroundTint="#FFFCFC">

                <TextView
                    android:id="@+id/welecome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="104dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="164dp"
                    android:layout_marginEnd="174dp"
                    android:text="공지사항"
                    android:textColor="#707070"
                    android:textSize="48sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:background="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_layer"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="#B7CADB"
            android:orientation="horizontal">

            <Button
                android:id="@+id/HOME"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:text="Button" />

            <Button
                android:id="@+id/non_department"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:text="Button" />

            <Button
                android:id="@+id/Other_notice"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:text="Button" />

            <Button
                android:id="@+id/App_open"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:text="Button" />

        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>